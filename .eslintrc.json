{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "standard",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "quotes": [ "warn", "single" ],
        "indent": [ "warn", 2, { "SwitchCase": 1 } ],
        "semi": [ "warn", "always" ],
        "comma-dangle": [ "warn", "always-multiline" ],
        "dot-notation": "off",
        "eqeqeq": "warn",
        "curly": [ "warn", "all" ],
        "brace-style": [ "warn" ],
        "prefer-arrow-callback": [ "warn" ],
        "max-len": [ "warn", 140 ],
        "no-non-null-assertion": [ "off" ],
        "comma-spacing": [ "error" ],
        "no-multi-spaces": [ "warn", { "ignoreEOLComments": true } ],
        "lines-between-class-members": [ "warn", "always", { "exceptAfterSingleLine": true } ],
        "space-before-function-paren": [ "warn", {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            } ]
    }
}
